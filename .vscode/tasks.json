{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install Dependencies and Build",
      "type": "shell",
      "command": "npm install && npm run build",
      "group": "build",
      "isBackground": false,
      "problemMatcher": []
    },
    {
      "label": "Build for Production",
      "type": "shell",
      "command": "npm",
      "args": ["run", "build"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "isBackground": false,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": ["$tsc"]
    }
  ]
}
